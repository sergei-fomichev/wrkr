<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_fragment_root">
    <TextView
        android:id="@+id/home_karma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Karma Score: "
        android:textColor="#000"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/home_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications: "
        android:textColor="#000"
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_below="@id/home_karma"/>
    <ListView
        android:id="@+id/fh_listview"
        android:layout_below="@id/home_notification_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
    <TextView
        android:id="@+id/home_no_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No notifications!"
        android:textSize="32sp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"/>
</RelativeLayout>